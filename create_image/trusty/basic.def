OSVersion: trusty
MirrorURL: http://us.archive.ubuntu.com/ubuntu/

%runscript
    echo 'Inside the singularity container'
    /bin/bash

%post
    sed -i 's/$/ universe/' /etc/apt/sources.list
    locale-gen "en_US.UTF-8"
    dpkg-reconfigure locales
    export LANGUAGE="en_US.UTF-8"
    echo 'LANGUAGE="en_US.UTF-8"' >> /etc/default/locale
    echo 'LC_ALL="en_US.UTF-8"' >> /etc/default/locale
    apt-get update
    apt-get install -y build-essential curl file git python-setuptools ruby
    apt-get clean

    mkdir -p /scratch /local-scratch /fastscratch /ihome /idata
    chmod a+rX /scratch /local-scratch /fastscratch /ihome /idata
